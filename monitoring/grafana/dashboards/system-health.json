{
  "dashboard": {
    "id": null,
    "uid": "sys-health",
    "title": "系统健康",
    "tags": ["imgsrch", "system"],
    "timezone": "browser",
    "refresh": "10s",
    "time": { "from": "now-1h", "to": "now" },
    "panels": [
      {
        "id": 1,
        "title": "熔断器状态",
        "type": "state-timeline",
        "gridPos": { "h": 8, "w": 24, "x": 0, "y": 0 },
        "targets": [
          {
            "expr": "circuit_breaker_state{job=\"search-service\"}",
            "legendFormat": "{{name}}"
          }
        ]
      },
      {
        "id": 2,
        "title": "错误率",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
        "targets": [
          {
            "expr": "sum(rate(search_errors_total{job=\"search-service\"}[1m])) / sum(rate(search_requests_total{job=\"search-service\"}[1m]))",
            "legendFormat": "Search 错误率"
          },
          {
            "expr": "sum(rate(write_errors_total{job=\"write-service\"}[1m])) / sum(rate(write_requests_total{job=\"write-service\"}[1m]))",
            "legendFormat": "Write 错误率"
          }
        ],
        "fieldConfig": {
          "defaults": { "unit": "percentunit" }
        }
      },
      {
        "id": 3,
        "title": "限流触发率",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
        "targets": [
          {
            "expr": "sum(rate(rate_limit_rejected_total{job=\"search-service\"}[1m]))",
            "legendFormat": "限流拒绝/s"
          }
        ]
      },
      {
        "id": 4,
        "title": "Redis 连接池",
        "type": "gauge",
        "gridPos": { "h": 8, "w": 8, "x": 0, "y": 16 },
        "targets": [
          {
            "expr": "redis_pool_active_connections / redis_pool_max_connections",
            "legendFormat": "使用率"
          }
        ],
        "fieldConfig": {
          "defaults": { "unit": "percentunit", "min": 0, "max": 1, "thresholds": { "steps": [{ "value": 0, "color": "green" }, { "value": 0.7, "color": "yellow" }, { "value": 0.9, "color": "red" }] } }
        }
      },
      {
        "id": 5,
        "title": "Milvus 连接池",
        "type": "gauge",
        "gridPos": { "h": 8, "w": 8, "x": 8, "y": 16 },
        "targets": [
          {
            "expr": "milvus_pool_active / milvus_pool_max",
            "legendFormat": "使用率"
          }
        ],
        "fieldConfig": {
          "defaults": { "unit": "percentunit", "min": 0, "max": 1, "thresholds": { "steps": [{ "value": 0, "color": "green" }, { "value": 0.7, "color": "yellow" }, { "value": 0.9, "color": "red" }] } }
        }
      },
      {
        "id": 6,
        "title": "PG 连接池",
        "type": "gauge",
        "gridPos": { "h": 8, "w": 8, "x": 16, "y": 16 },
        "targets": [
          {
            "expr": "pg_pool_active / pg_pool_max",
            "legendFormat": "使用率"
          }
        ],
        "fieldConfig": {
          "defaults": { "unit": "percentunit", "min": 0, "max": 1, "thresholds": { "steps": [{ "value": 0, "color": "green" }, { "value": 0.7, "color": "yellow" }, { "value": 0.9, "color": "red" }] } }
        }
      }
    ]
  },
  "overwrite": true
}
